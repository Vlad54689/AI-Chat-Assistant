    {
      "parameters": {
        "jsCode": "// 1. Direct Input Access\nconst text = $input.first().json.message.text;\nconst chatId = $input.first().json.message.chat.id;\n\n// 2. Parse: \"/monitor add 12345\" -> [\"monitor\", \"add\", \"12345\"]\nconst parts = text.split(/\\s+/);\n// Remove slash and make lowercase (e.g., \"/Monitor\" -> \"monitor\")\nconst command = parts[0].replace('/', '').toLowerCase(); \nconst action = parts[1] ? parts[1].toLowerCase() : \"\";\n\n// Helper: Escape single quotes to prevent SQL errors\nconst clean = (str) => str.replace(/'/g, \"''\");\n\nlet query = \"SELECT 1 WHERE false;\"; \nlet type = \"error\"; \n\n// --- COMMAND 1: MONITOR (Manage Users) ---\nif (command === 'monitor') {\n    const targetId = parts[2]; \n    const name = parts.slice(3).join(' ') || \"User\";\n\n    if (action === 'add' && targetId) {\n        query = `INSERT INTO monitored_users (user_id, username) VALUES (${parseInt(targetId)}, '${clean(name)}') ON CONFLICT (user_id) DO NOTHING;`;\n        type = \"insert\";\n    } \n    else if (action === 'del' && targetId) {\n        query = `DELETE FROM monitored_users WHERE user_id = ${parseInt(targetId)};`;\n        type = \"delete\";\n    } \n    else if (action === 'sh' || action === 'ls') {\n        query = \"SELECT * FROM monitored_users;\";\n        type = \"select\";\n    }\n}\n\n// --- COMMAND 2: PREF (Manage Topics) ---\nif (command === 'pref') {\n    const topics = parts.slice(2).join(' '); \n\n    if (action === 'set' && topics) {\n        query = `INSERT INTO user_preferences (admin_id, topics) VALUES (${chatId}, '${clean(topics)}') ON CONFLICT (admin_id) DO UPDATE SET topics = '${clean(topics)}';`;\n        type = \"insert\";\n    } \n    else if (action === 'del') {\n        query = `DELETE FROM user_preferences WHERE admin_id = ${chatId};`;\n        type = \"delete\";\n    } \n    else if (action === 'sh' || action === 'ls') {\n        query = `SELECT topics FROM user_preferences WHERE admin_id = ${chatId};`;\n        type = \"select\";\n    }\n}\n\nreturn { json: { query, type } };"
      },
